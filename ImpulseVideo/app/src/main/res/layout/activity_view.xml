<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.x00075294.impulsevideo.ViewActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <com.devbrackets.android.exomedia.ui.widget.VideoView
        android:id="@+id/video_view_watch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:useDefaultControls="true"
        android:clickable="true"
        app:videoScale="fitCenter"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/video_view_info"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:id="@+id/view_disp_title"
                    android:layout_alignBottom="@+id/view_title"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/view_title"
                    android:textSize="30sp"
                    android:textStyle="normal|italic"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="39dp"
                    android:id="@+id/view_desc"
                    android:layout_alignParentEnd="true"
                    android:textSize="30sp" />
            </LinearLayout>
        </ScrollView>


        <Button
            android:text="Dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/button3"
            android:layout_alignParentEnd="true"
            android:elevation="5dp" />
    </RelativeLayout>
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
</RelativeLayout>
